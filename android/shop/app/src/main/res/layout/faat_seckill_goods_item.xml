<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goods_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView157"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_no_pic" />

    <TextView
        android:id="@+id/textView310"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView157"
        app:layout_constraintTop_toTopOf="@+id/imageView157" />

    <TextView
        android:id="@+id/textView311"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:text=""
        android:textColor="@color/colorFont_morandi"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView314"
        app:layout_constraintStart_toEndOf="@+id/textView314"
        app:layout_constraintTop_toTopOf="@+id/textView314" />

    <TextView
        android:id="@+id/textView312"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView311"
        app:layout_constraintStart_toEndOf="@+id/textView311"
        app:layout_constraintTop_toTopOf="@+id/textView311"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView314"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_60_red"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="@string/second_kill"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView310"
        app:layout_constraintTop_toBottomOf="@+id/textView310" />

    <View
        android:id="@+id/view102"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="@color/gray_d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView313"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_60_gray"
        android:gravity="center_vertical"
        android:text="@string/is_over"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView157"
        app:layout_constraintEnd_toEndOf="@+id/textView310"
        app:layout_constraintStart_toStartOf="@+id/textView310"
        app:layout_constraintTop_toBottomOf="@+id/textView311" />

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/count_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_60_morandi"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:layout_constraintBottom_toBottomOf="@+id/imageView157"
        app:layout_constraintEnd_toEndOf="@+id/textView310"
        app:layout_constraintStart_toStartOf="@+id/textView310"
        app:layout_constraintTop_toBottomOf="@+id/textView311"
        app:suffixHour=":"
        app:suffixMinute=":"
        app:suffixTextColor="@color/white"
        app:timeTextColor="@color/white"
        app:timeTextSize="16sp" />
</android.support.constraint.ConstraintLayout>