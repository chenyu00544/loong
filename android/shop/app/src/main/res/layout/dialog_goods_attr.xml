<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view46"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/imageView83"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/view46"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_no_pic" />

    <TextView
        android:id="@+id/textView165"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/goods"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView83"
        app:layout_constraintEnd_toEndOf="@+id/view46"
        app:layout_constraintStart_toEndOf="@+id/imageView83"
        app:layout_constraintTop_toTopOf="@+id/view46"
        app:layout_constraintVertical_bias="0.19999999" />

    <TextView
        android:id="@+id/textView170"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/goods_price"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView165"
        app:layout_constraintTop_toBottomOf="@+id/textView165" />

    <View
        android:id="@+id/view47"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView83" />

    <TextView
        android:id="@+id/textView180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/num"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attr_wrap" />

    <ImageView
        android:id="@+id/imageView84"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ltb_corners_all_border"
        android:padding="6dp"
        android:src="@drawable/icon_sub"
        app:layout_constraintBottom_toBottomOf="@+id/textView180"
        app:layout_constraintStart_toEndOf="@+id/textView180"
        app:layout_constraintTop_toTopOf="@+id/textView180"
        app:srcCompat="@drawable/icon_sub" />

    <TextView
        android:id="@+id/textView181"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/tb_border"
        android:gravity="center_vertical"
        android:text="@string/goods_nums"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView84"
        app:layout_constraintStart_toEndOf="@+id/imageView84"
        app:layout_constraintTop_toTopOf="@+id/imageView84" />

    <ImageView
        android:id="@+id/imageView85"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/rtb_corners_all_border"
        android:padding="6dp"
        android:src="@drawable/icon_add_back"
        app:layout_constraintBottom_toBottomOf="@+id/textView181"
        app:layout_constraintStart_toEndOf="@+id/textView181"
        app:layout_constraintTop_toTopOf="@+id/textView181"
        app:srcCompat="@drawable/icon_add_back" />

    <TextView
        android:id="@+id/textView178"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:text="@string/add_cart"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView177" />

    <TextView
        android:id="@+id/textView177"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:text="@string/buy"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/view46"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view46"
        app:layout_constraintTop_toBottomOf="@+id/textView180" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/attr_wrap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view47" />
    
</android.support.constraint.ConstraintLayout>