<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/brand_header"
    android:layout_width="match_parent"
    android:layout_height="165dp">

    <View
        android:id="@+id/view98"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imageView58"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_no_pic" />

    <TextView
        android:id="@+id/textView302"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView58"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imageView58"
        android:layout_toRightOf="@+id/imageView58"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView303"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView58"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView304"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView303"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/more_brand_info" />

    <ImageView
        android:id="@+id/imageView155"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/textView304"
        android:layout_alignTop="@+id/textView304"
        android:layout_toEndOf="@+id/textView304"
        android:layout_toRightOf="@+id/textView304"
        android:src="@drawable/icon_forward_down"
        app:srcCompat="@drawable/icon_forward_down" />

    <View
        android:id="@+id/view99"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/textView304"
        android:layout_alignLeft="@+id/textView303"
        android:layout_alignStart="@+id/textView303"
        android:layout_alignTop="@+id/textView304"
        android:layout_below="@+id/textView303"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView304"
        android:layout_toStartOf="@+id/textView304"
        android:background="@color/gray_d" />

</RelativeLayout>