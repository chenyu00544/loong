<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/brand_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view98"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView58" />

    <ImageView
        android:id="@+id/imageView58"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/view98"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_no_pic" />

    <TextView
        android:id="@+id/textView302"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView58"
        app:layout_constraintEnd_toEndOf="@+id/view98"
        app:layout_constraintStart_toEndOf="@+id/imageView58"
        app:layout_constraintTop_toTopOf="@+id/view98" />

    <TextView
        android:id="@+id/textView303"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/textView304"
        app:layout_constraintEnd_toEndOf="@+id/textView302"
        app:layout_constraintStart_toStartOf="@+id/imageView58"
        app:layout_constraintTop_toBottomOf="@+id/imageView58" />

    <TextView
        android:id="@+id/textView304"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:text="@string/more_brand_info"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view98"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view99"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/gray_d"
        app:layout_constraintBottom_toBottomOf="@+id/textView304"
        app:layout_constraintEnd_toStartOf="@+id/textView304"
        app:layout_constraintStart_toStartOf="@+id/textView303"
        app:layout_constraintTop_toTopOf="@+id/textView304" />

    <View
        android:id="@+id/view100"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/gray_d"
        app:layout_constraintBottom_toBottomOf="@+id/textView304"
        app:layout_constraintEnd_toEndOf="@+id/textView303"
        app:layout_constraintStart_toEndOf="@+id/imageView155"
        app:layout_constraintTop_toTopOf="@+id/textView304" />

    <ImageView
        android:id="@+id/imageView155"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/icon_forward_down"
        android:tag="down"
        app:layout_constraintBottom_toBottomOf="@+id/textView304"
        app:layout_constraintStart_toEndOf="@+id/textView304"
        app:layout_constraintTop_toTopOf="@+id/textView304" />

</android.support.constraint.ConstraintLayout>