<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorInactive">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/banner"
                layout="@layout/banner_slide"
                android:layout_width="match_parent"
                android:layout_height="230dp" />

            <include
                android:id="@+id/ads_list"
                layout="@layout/ads_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner" />

            <include
                android:id="@+id/ads_list_1"
                layout="@layout/ads_list_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ads_list"
                android:layout_marginTop="5dp" />

            <include
                android:id="@+id/ads_list_2"
                layout="@layout/ads_list_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ads_list_1"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/nav_header"
        layout="@layout/home_header_view"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
</RelativeLayout>