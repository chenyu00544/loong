<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res-auto" app:orientation="vertical" app:background="#ffffff" app:layout_width="match_parent" app:layout_height="match_parent"
    <LinearLayout app:orientation="vertical" app:id="@+id/ll_search" app:layout_width="match_parent" app:layout_height="match_parent">
        <com.ecjia.component.view.ECJiaTopView app:id="@+id/return_ordergoods_topview" app:layout_width="match_parent" app:layout_height="wrap_content" />
        <LinearLayout app:orientation="vertical" app:paddingLeft="10dp" app:paddingTop="5dp" app:paddingRight="10dp" app:paddingBottom="5dp" app:layout_width="match_parent" app:layout_height="wrap_content"
            <LinearLayout app:gravity="top|bottom|center_vertical|fill_vertical|center|fill" app:orientation="horizontal" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x1801">
                <TextView app:textColor="@color/my_black" app:layout_width="wrap_content" app:layout_height="wrap_content" app:text="订单编号：" />
                <TextView app:textColor="@color/my_black" app:id="@+id/order_sn" app:layout_width="wrap_content" app:layout_height="wrap_content" app:text="487976863436464" app:layout_weight="1.0" />
                <TextView app:textColor="@color/my_red" app:layout_width="wrap_content" app:layout_height="wrap_content" app:text="已完成" />
            </LinearLayout>
            <LinearLayout app:gravity="top|bottom|center_vertical|fill_vertical|center|fill" app:orientation="horizontal" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x1801">
                <TextView app:textColor="@color/my_black" app:layout_width="wrap_content" app:layout_height="wrap_content" app:text="下单时间：" />
                <TextView app:textColor="@color/my_black" app:id="@+id/order_time" app:layout_width="wrap_content" app:layout_height="wrap_content" app:text="2016-12-26 15:45:13" />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout app:layout_width="match_parent" app:layout_height="match_parent">
            <ScrollView app:background="@color/common_bg" app:layout_width="match_parent" app:layout_height="match_parent">
                <LinearLayout app:orientation="vertical" app:layout_width="match_parent" app:layout_height="match_parent">
                    <com.ecjia.component.view.ECJiaMyListView app:id="@+id/trade_list" app:layout_width="match_parent" app:layout_height="wrap_content" app:divider="0x0" />
                    <RelativeLayout app:id="@+id/show_all" app:background="#ffffff" app:visibility="visible" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x2401">
                        <TextView app:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" app:background="@drawable/shape_gray_bg_corner" app:layout_width="match_parent" app:layout_height="UNKNOWN_DATA_0x1801" app:layout_marginLeft="10dp" app:layout_marginRight="10dp" app:text="显示全部" app:layout_centerInParent="true" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
            <com.ecjia.component.view.ECJiaErrorView app:id="@+id/null_pager" app:visibility="gone" app:layout_width="match_parent" app:layout_height="match_parent" app:errorImage="@drawable/null_normal" app:errorText="@string/no_result" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
