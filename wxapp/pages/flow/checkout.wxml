            <!--商品列表-s-->
            <view wx:for="{{shopLists.list}}" wx:key="shopLists" wx:for-index="index" class="flow-list m-top20">
              <view class="header">
                <text class="iconfont icon-dianpu2 "></text>
                <text class="shop_name">{{shopLists.list[index].shop_list[0].shop_name}}</text>
              </view>
              <view class="checkout_list" wx:for="{{item.shop_list}}" wx:for-index="subindex" wx:key="checkList">
                <navigator url="../goods/index?objectId={{item.goods_id}}">
                  <view class="dis-flex flow-shopList" data-index="{{subindex}}">
                    <view class="flow-list-left">
                      <image src="{{item.goods_thumb}}" mode="aspectFit" />
                    </view>
                    <view class="dis-flex flow-list-right">
                      <view class="flow-list-cont">
                        <text class="f-30 col-3 twolist-hidden">{{item.goods_name}}</text>
                      </view>
                      <view class="flow-list-cont">
                        <text class="f-26 col-7">{{item.goods_attr}}</text>
                      </view>
                      <view class="flow-list-cont cont-num">
                        <text class="small mr-r">×{{item.goods_number}}</text>
                        <text class="small">{{item.goods_price_formated}}</text>
                      </view>
                    </view>
                  </view>
                </navigator>
              </view>
              <picker bindchange="shippingChange" range="{{shippingName[index].option}}" value='{{shippingName[index].id}}' data-index="{{index}}" class="select b-f" wx:if="{{cash_type != 'ondelivery'}}">
                <view class="flow-distribution dis-flex">
                  <view class="flow-distribution-left pl-12">
                    <text class="flow-dis col-7">配送方式</text>
                    <text class="m-l flow-dis">{{ shippingName[index].option[shippingName[index].id] }}</text>
                  </view>
                  <view class="flow-distribution-right pr-12 p-r">
                    <text class="iconfont icon-xiangyoujiantou"></text >
          </view>
        </view>
      </picker> 
      <view class="flow-all-money b-f padding-box" wx:if="{{cash_type != 'ondelivery'}}">
        <view class="dis-flex flow-all-list-cont">
            <text class="flex-five left col-7">配送费用：</text>
                    <text class="flex-five right t-r">+￥{{ payfee[index] }}</text>
                  </view>
                </view>
                <view class="flow-num-box b-f"> 共 {{item.total.number}}件商品,合计：
                  <text class="flow-money ">{{item.total.price_formated}}</text>
                </view>
            </view>
            <!--商品列表-e-->

            <!-- 优惠活动折扣 -->
            <block wx:if="{{faat}}">
              <view class="flow-distribution dis-flex b-f m-top20">
                <view class="flow-distribution-left pl-12 pr-12">
                  <text class="flow-dis col-7">活动折扣</text>
                  <text class="cont-text col-m">-￥{{faat}}</text>
                </view>
              </view>
            </block>

            <!-- 红包开始 -->
            <block wx:if="{{bonus_list != ''}}">
              <view class="flow-distribution dis-flex b-f m-top20" bindtap="onChangeShowBonus" data-index="{{index}}">
                <view class="flow-distribution-left pl-12">
                  <text class="flow-dis col-7">红包</text>
                  <text class="cont-text col-m">使用红包</text>
                </view>
                <view class="flow-distribution-right pr-12 p-r">
                  <text class="iconfont icon-xiangyoujiantou user-orderJtou-1 {{showViewBonus?'':'user-orderJtou-2'}}"></text>
                </view>
              </view>
              <view class="flow-list">
                <!--红包-s-->
                <coupons-ul class="goods-coupon-cont hide {{showViewBonus?'show':''}}">
                  <radio-group class="radio-group" bindchange="radioChangeBonus" data-index="{{index}}">
                    <label class="radio" wx:for="{{bonus_list}}" wx:key="bonus-radio" wx:for-index="index">
                      <view class="dis-box b-f coupons_list">
                        <view class="coupons-radio-left">
                          <radio value="{{item.bonus_id}}" checked="{{item.checked}}" />{{item.value}}
                        </view>
                        <view class="coupons-radio-right box-flex">
                          <coupons-li class=" dis-box oh ">
                            <view class="max-left box-flex">
                              <view class="coupons-box dis-box">
                                <view class=" left">
                                  <text class="sup">¥</text>
                                  <text class="price">{{item.type_money}}</text>
                                </view>
                                <view class="box-flex right f-24">
                                  <text class="s_name f-24">满{{item.min_goods_amount}}元</text>
                                  <text class="s_cont f-24 col-3">{{item.type_name}}</text>
                                </view>
                              </view>
                              <view class="f-24 col-7 m-top4">{{item.use_start_date}} - {{item.use_end_date}}</view>
                            </view>
                          </coupons-li>
                        </view>
                      </view>
                    </label>
                  </radio-group>
                </coupons-ul>
              </view>
            </block>
            <!-- 红包结束 -->

            <block wx:if="{{coupons_list!=''}}">
              <view class="flow-distribution dis-flex b-f m-top20" bindtap="onChangeShowCoupons" data-index="{{index}}">
                <view class="flow-distribution-left pl-12">
                  <text class="flow-dis col-7">优惠券</text>
                  <text class="cont-text col-m">使用优惠券</text>
                </view>
                <view class="flow-distribution-right pr-12 p-r">
                  <text class="iconfont icon-xiangyoujiantou user-orderJtou-1 {{showViewCoupons?'':'user-orderJtou-2'}}"></text>
                </view>
              </view>
              <view class="flow-list">
                <!--优惠券-s-->
                <coupons-ul class="goods-coupon-cont hide {{showViewCoupons?'show':''}}">
                  <radio-group class="radio-group" bindchange="radioChangeCoupons" data-index="{{index}}">
                    <label class="radio" wx:for="{{coupons_list}}" wx:key="coupons-radio" wx:for-index="index">
                      <view class="dis-box b-f coupons_list">
                        <view class="coupons-radio-left">
                          <radio value="{{item.uc_id}}" checked="{{item.checked}}" />{{item.value}}
                        </view>
                        <view class="coupons-radio-right box-flex">
                          <coupons-li class=" dis-box oh ">
                            <view class="max-left box-flex">
                              <view class="coupons-box dis-box">
                                <view class=" left">
                                  <text class="sup">¥</text>
                                  <text class="price">{{item.cou_money}}</text>
                                </view>
                                <view class="box-flex right f-24">
                                  <text class="s_name f-24">满{{item.cou_man}}元</text>
                                  <text class="s_cont f-24 col-3">{{item.cou_title}}</text>
                                </view>
                              </view>
                              <view class="f-24 col-7 m-top4">{{item.cou_start_time}} - {{item.cou_end_time}}</view>
                            </view>
                          </coupons-li>
                        </view>
                      </view>
                    </label>
                  </radio-group>
                </coupons-ul>
              </view>
            </block>

