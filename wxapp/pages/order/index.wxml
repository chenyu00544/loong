<view class="container m-b5">
  <view class="common-header-xian"></view>
  <!--订单分类-->
  <view class=" goods-detail-box">
    <view class="header f-28 col-3 dis-box" wx:if="{{cash_type != 'ondelivery'}}">
      <view class='box-flex {{current == 0?"active":""}}' data-index="0" catchtap="bindHeaderTap">全部订单</view>
      <view class='box-flex {{current == 1?"active":""}}' data-index="1" bindtap="bindHeaderTap">待付款</view>
      <view class='box-flex {{current == 2?"active":""}}' data-index="2" bindtap="bindHeaderTap">待收货</view>
      <view class='box-flex {{current == 3?"active":""}}' data-index="3" bindtap="bindHeaderTap">售后</view>
      <view class="commont-nav-more" bindtap='navMore'>
        <text class="iconfont icon-xiangyoujiantou user-orderJtou-1 {{showViewNav?'':'user-orderJtou-2'}}"></text>
      </view>
    </view>
    <!--更多nav-->
    <view class="comment-more-nav dis-box {{showViewNav?'active':''}}" wx:if="{{cash_type != 'ondelivery'}}">
      <view class="box-flex">
        <view class="btn" bindtap='bargainNav'>
          <text class="iconfont icon-daojianfu"></text>
          <text class="f-26">我的砍价</text>
        </view>
      </view>
      <view class="box-flex">
        <view class="btn" bindtap='groupNav'>
          <text class="iconfont icon-shehuituanti"></text>
          <text class="f-26">我的拼购</text>
        </view>
      </view>
      <view class="box-flex"></view>
    </view>
    <!--遮罩层-->
    <view class="bargain-commont-bg bright789_view_hide{{showViewNav?'bright789_view_show':''}}">
    </view>
    <scroll-view scroll-y="true" style="height:{{scrollHeight}}px;" bindscrolltolower="bindDownLoad">
      <view class="wrapper">
        <view wx:if="{{orders!=''}}">
          <block wx:for="{{orders}}" wx:key="orders">
            <view class="m-top20 ">
              <view class="order-box b-f">
                <view class="order-header dis-flex">
                  <view class="flex-box">
                    <text class="title">{{item.shop_name}}</text>
                  </view>
                  <view class="flex-box">
                    <text class="cont">{{item.pay_status}} {{item.shipping_status}} {{item.order_status}}</text>
                  </view>
                </view>
              </view>
              <view class="order-box b-f">
                <view class="order-cont">
                  <view class="order-num">
                    <text>订单号：</text>{{item.order_sn}}
                    <text class="f-22  {{item.extension_code!=''?'bar-btn':''}}">{{item.extension_code!=''?'砍价订单':''}}</text>
                  </view>
                  <view class="time">
                    <text>{{item.add_time}}</text>
                  </view>
                </view>
              </view>
              <view class="order-box order-img_list">
                <view class="order-shop dis-flex">
                  <view class="order-list-box dis-flex" bindtap="siteDetail" data-index="{{index}}">
                    <view class="left">
                      <view class="dis-flex">
                        <block wx:for="{{item.goods}}" wx:key="goods">
                          <view class="order-shop-left">
                            <image src="{{item.goods_thumb}}"></image>
                          </view>
                          <!-- <view class="order-right-name twolist-hidden">{{item.goods_name}}</view> -->
                        </block>
                      </view>
                    </view>
                    <view class="right p-r">
                      <text class="goods-number">共{{item.total_number}}件</text>
                      <text class="iconfont icon-xiangyoujiantou user-orderJtou"></text>
                    </view>
                  </view>
                </view>
              </view>
              <view class="order-box b-f">
                <view class="order-btn dis-flex">
                  <view class="order-left">
                    <view class="text">合计：
                      <text class="col-m">{{item.total_amount_formated}}</text>
                    </view>
                  </view>
                  <view class="order-right">
                    <view class="dis-flex">
                      <view class="flex-box" wx:if="{{item.pay_status == '未付款'}}">
                        <view class="btn-default" bindtap='cancel_order' data-id="{{item.order_id}}">取消</view>
                      </view>
                      <view class="" wx:if="{{item.pay_status == '未付款'}}">
                        <view class="btn-main" bindtap='pay_order' data-id="{{item.order_id}}">付款</view>
                      </view>
                      <view class="flex-box" wx:if="{{item.shipping_status == '已发货'}}">
                        <view class="btn-main" bindtap='confirm_order' data-id="{{item.order_id}}">确认收货</view>
                      </view>
                      <view class="flex-box" wx:if="{{item.return_order && item.return_order.agree_apply == '1' && item.return_order.back_invoice_no == ''}}">
                        <view class="btn-main" bindtap='apply_order' data-id="{{item.order_id}}">填写运单</view>
                      </view>
                      <view class="flex-box" wx:elif="{{item.return_order && item.return_order.refound_status == 1}}">
                        <view class="btn-main" bindtap='apply_order' data-id="{{item.order_id}}">完成</view>
                      </view>
                      <view class="flex-box" wx:elif="{{item.return_order && item.return_order.back_invoice_no != ''}}">
                        <view class="btn-main" bindtap='apply_order' data-id="{{item.order_id}}">商品寄回</view>
                      </view>
                      <view class="flex-box" wx:elif="{{item.return_order && item.return_order.agree_apply == 0 && item.return_order.return_status != 6}}">
                        <view class="btn-main" bindtap='apply_order' data-id="{{item.order_id}}">处理中</view>
                      </view>
                      <view class="flex-box" wx:elif="{{item.return_order && item.return_order.return_status == 6}}">
                        <view class="btn-main" bindtap='activation' data-index="{{index}}" activation_number="{{item.return_order.activation_number}}" data-id="{{item.return_order.ret_id}}">激活</view>
                      </view>
                      <view class="flex-box" wx:elif="{{item.shipping_status == '已收货' || item.shipping_status == '已发货'}}">
                        <view class="btn-main" bindtap='apply_order' data-id="{{item.order_id}}">申请售后</view>
                      </view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
          </block>
        </view>
        <view wx:else>
          <view class="ectouch-notcont">
            <text class="iconfont icon-meiyougengduo"></text >
             <text class="cont">亲，您还没有订单信息哦！</text>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>