page {
  background: #fff;
}

.goods-list {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.goods-title {
  min-height: 100rpx;
}

.goods-wrap {
  display: flex;
}

.goods-img {
  flex: 1;
}

.goods-img image {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #eee;
}

.goods-info {
  flex: 2;
}

.goods-attr {
  display: flex;
}

.price {
  flex: 3;
}

.num {
  flex: 1;
  text-align: right;
}

.apple {
  width: 100%;
}

.apple text {
  padding: 6rpx 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 9rpx;
  display: block;
  float: right;
  margin-top: 15rpx;
}
