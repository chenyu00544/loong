<view class="container">
  <view class='header_img'>
    <image src='{{header_img}}'></image>
  </view>
  <view class='wrap'>
    <block wx:for="{{bonus}}" wx:key="index">
      <view class="bonus-wrap">
        <image src='../../../images/bonus_bg.png' class='bonus-bg'></image>
        <view class='bonus-title f-30'>
          <text>{{item.type_name}}</text>
        </view>
        <view class='bonus-money'>
          <view class='symbol'>
            <text>￥</text>
          </view>
          <view class='num'>
            <text>{{item.type_money}}</text>
          </view>
        </view>
        <block wx:if="{{!item.rece}}">
          <view class='bonus-rec' bindtap='receiveBonus' data-type_id="{{item.type_id}}" data-index="{{index}}">
            <image src='../../../images/bonus_rec.png' class='bonus-bt'></image>
            <view class='rec'>
              <text>立即领取</text>
            </view>
          </view>
        </block>
        <block wx:else>
          <view class='bonus-rec' bindtap='receiveBonus' data-type_id="{{item.type_id}}" data-index="{{index}}">
            <image src='../../../images/bonus_rec.png' class='bonus-bt'></image>
            <view class='rec'>
              <text>已领取</text>
            </view>
          </view>
        </block>
      </view>
    </block>
  </view>
</view>