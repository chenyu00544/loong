/*频道nav*/
.group-tab{height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #fff; font-size: 30rpx; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99;border-bottom:1rpx solid #f6f6f9;}
.group-tab .tab-item{margin:0 36rpx;display: inline-block;}
.group-tab .tab-item.active{color: #ff495e;position: relative;}
.group-tab .tab-item.active:after{content: "";display: block;height: 4rpx;width: 52rpx;background: #ff495e;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.group-sub-tab{height: 160rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #fff; font-size: 30rpx; white-space: nowrap; z-index: 99;border-bottom:1rpx solid #f6f6f9;}
.group-sub-tab .tab-item{margin:0 36rpx;display: inline-block;}
.group-sub-tab .sub-nav-title.active{color: #ff495e;position: relative;}
